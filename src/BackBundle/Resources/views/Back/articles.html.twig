{% extends 'base2(back).html.twig' %}

{% block body %}
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
<div class="breadcrumbs">
<div class="breadcrumbs-inner">
<div class="row m-0">
<div class="col-sm-4">
<div class="page-header float-left">
<div class="page-title">
<h1>Dashboard</h1>
</div>
</div>
</div>
<div class="col-sm-8">
<div class="page-header float-right">
<div class="page-title">
<ol class="breadcrumb text-right">
<li><a href="/admin/articles">Articles</a></li>
<li class="active"><a href="/admin/add_article">Ajouter un article</a></li>
</ol>
</div>
</div>
</div>
</div>
</div>
</div>
<div class="content">
<div class="animated fadeIn">
<div class="row">
{% for article in articles %}
<div class="col-md-4">
<a href="{{ path('back_articles_edit',{'id':article.id}) }}" class="btn btn-primary btn-lg btn-block"><i class="fa fa-magic"></i>Modifier l'article</a>
<a href="{{ path('back_articles_delete',{'id':article.id}) }}" class="btn btn-danger btn-lg btn-block"><i class="fa fa-trash"></i>Supprimer l'article</a>
<div class="card">
<img class="card-img-top" src="{{ article.image }}" alt="image de l'article">
<div class="card-body">
<h4 class="card-title mb-3">{{ article.titre }}</h4>
<p class="card-text">{{ article.text }}</p>
</div>
<div class="card-footer">
<span><i class="fas fa-comment"></i><a href="{{ path('back_articles_comments',{'id':article.id}) }}">{{ article.getCommentaires().count() }} commentaires</a></span>
<p>DÃ©rniere mofification {{ article.lastModification | date('d/m/y H:i:s') }}</p>
</div>
</div>
</div>
{% endfor %}
</div>
</div>
</div>
{% endblock %}